    "version": "0.2.0",
    "configurations": [
        {
            "name": "CertificationAuthority QA",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build CertificationAuthority API",
            "program": "${workspaceFolder}/src/CertificationAuthority/CertificationAuthority.Presentation/bin/Debug/net8.0/CertificationAuthority.Presentation.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/CertificationAuthority/CertificationAuthority.Presentation",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "QA"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "http://localhost:5180/swagger"  // URL do Swagger
            }
        }
    ]
}
